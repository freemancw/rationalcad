\newlength{\mOLineLength}
\newcommand{\mOLine}[1]{
    \tightoverset{
    \setlength{\mOLineLength}{\widthof{#1}}
    \begin{tikzpicture}
        \draw [-to new, arrow head = 1.6pt, line width=0.5pt] (0, 0) --
        +(0.8\mOLineLength, 0);
    \end{tikzpicture}
    }{\mathrm{#1}}
}

